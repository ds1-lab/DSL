size=10
hash_table= [None] * size

def hashfunction(key):
    return key%size

def insert():
    key=int(input("\nEnter Key : "))
    index=hashfunction(key)

    while hash_table[index] is not None:
        index=(index+1)%size
    hash_table[index]=key
    print("Added Succesfuly")

def search():
    key=int(input("\nEnter Key : "))
    index=hashfunction(key)
    start=index

    while hash_table[index] is not None:
        if hash_table[index]==key:
            print(f"Key {key} found at index {index}")
            return
        index=(index+1)%size

        if index==start :
            break
    print("Key Not found")

def delete():
    key=int(input("\nEnter Key : "))
    index=hashfunction(key)
    start=index

    while hash_table[index] is not None:
        if hash_table[index]==key:
            hash_table[index] = None
            print(f"Key deleted succesfully")
            return
        index=(index+1)%size

        if index == start:
            break
    print("Key Not found")

def display():
    for i in range (size):
        print(f"{i} : {hash_table[i]}")

while True:
    print("\n==== Hash Table Menu ====")
    print("1. Insert")
    print("2. Search")
    print("3. Delete")
    print("4. Display")
    print("5. Exit")

    ch = int(input("Enter your choice: "))
    if ch == 1:
        insert()
    elif ch == 2:
        search()
    elif ch == 3:
        delete()
    elif ch == 4:
        display()
    elif ch == 5:
        print("Exiting...")
        break
    else:
        print("Invalid choice!")
